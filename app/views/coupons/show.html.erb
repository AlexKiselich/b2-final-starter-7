<%= render partial: "shared/nav" %>

<section id="coupon-<%= @coupon.id %>">
  <h1><%= @coupon.name %></h1>
  <h3>Unique Code: <%= @coupon.code %></h3>
  <h3>Coupon's Status: <%= @coupon.status %></h3> <% if @coupon.status == "active" %>
                                                          <%= button_to "Deactivate Coupon", "/merchants/#{@merchant.id}/coupons/#{@coupon.id}?change=active", method: :patch %>
                                                    <% elsif @coupon.status == "inactive" %>
                                                          <%= button_to "Activate Coupon", "/merchants/#{@merchant.id}/coupons/#{@coupon.id}?change=inactive", method: :patch %>
                                                  <% end %>
  <h3>Value: <%= @coupon.amount %> <%= @coupon.discount %> Off</h3>
  <h3>Used <%= @coupon.count %> Times</h3>
</section>
